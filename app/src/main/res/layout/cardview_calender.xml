<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    app:cardUseCompatPadding="true"
                                    android:backgroundTint="@color/calendarTint"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView
                android:tint="@android:color/black"
                android:clickable="true"
                android:id="@+id/calendar_add"
                android:padding="@dimen/activity_vertical_margin"
                android:src="@drawable/ic_calender"
                android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <LinearLayout
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/general_padding"
                android:paddingBottom="@dimen/general_padding"
                android:orientation="vertical"
                android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView
                    android:textColor="@android:color/black"
                    android:id="@+id/calendar_name"
                    android:text="name"
                    android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <TextView
                    android:textColor="@android:color/black"
                    android:id="@+id/calendar_mobile"
                    android:text="6143136377"
                    android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <TextView
                    android:textColor="@android:color/black"
                    android:id="@+id/calendar_time"
                    android:text="time"
                    android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <TextView
                    android:textColor="@android:color/black"
                    android:id="@+id/calendar_address"
                    android:text="1840 Wessel Ct, St Charles, IL"
                    android:layout_width="match_parent" android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>